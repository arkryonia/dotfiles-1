! NAME="~/.Xresources"
! BLURB="Set config parameters for X client applications"
! SOURCE="https://github.com/vonbrownie/dotfiles/blob/master/.Xresources"

! Refresh config by running ``xrdb -merge ~/.Xresources``

! --------[ Xft ]--------------------------------------------------------------
!Xft.dpi:       96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

! --------[ Colours ]----------------------------------------------------------
*foreground:    #6fc3df
*background:    #000000
*cursorColor:   #ef2929
! black
*color0:        #000000
*color8:        #555753
! red
*color1:        #cc0000
*color9:        #ef2929
! green
*color2:        #4e9a06
*color10:       #8ae234
! yellow
*color3:        #c4a000
*color11:       #fce94f
! blue
*color4:        #3465a4
*color12:       #025cac
! magenta
*color5:        #75507b
*color13:       #ad7fa8
! cyan
*color6:        #06989a
*color14:       #96cdfe
! white
*color7:        #d3d7cf
*color15:       #eeeeec

! --------[ Urxvt ]------------------------------------------------------------
URxvt.scrollBar:    false
URxvt.saveLines:    8888

URxvt.font:     xft:Liberation Mono:pixelsize=15
URxvt*boldFont: xft:Liberation Mono:bold:pixelsize=15

Urxvt*perl-lib:         /usr/lib/x86_64-linux-gnu/urxvt/perl/
URxvt.perl-ext-common:  default,matcher,tabbed
URxvt.tabbed.tabbar-fg: 15
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    15
URxvt.tabbed.tab-bg:    12
URxvt.url-launcher:     /usr/local/bin/firefox
URxvt.matcher.button:   1
! add a spot of colour to man pages
URxvt.colorIT:      #87af5f
URxvt.colorBD:      #d7d7d7
URxvt.colorUL:      #87afd7

! --------[ Rofi ]-------------------------------------------------------------
! "Hide scroll-bar" Set from: File
rofi.hide-scrollbar:    true
! "Separator style (none, dash, solid)" Set from: File
rofi.separator-style:	solid
! Colour help from https://davedavenport.github.io/rofi/p11-Generator.html
rofi.color-enabled: 	true
! "Color scheme window" Set from: File
rofi.color-window:		#000000, #3daee9, #000000
! "Color scheme for normal row" Set from: File
rofi.color-normal: 		#000000, #6fc3df, #000000, #3daee9, #000000
! "Color scheme for active row" Set from: File
rofi.color-active:		#000000, #1cdc9a, #000000, #1cdc9a, #000000
! "Color scheme for urgent row" Set from: File
rofi.color-urgent:		#000000, #ff0000, #000000, #ff0000, #000000
