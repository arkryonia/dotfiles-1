! ~/.xmodmap - Acer C720 Chromebook + ThinkPad USB Keyboard with Trackpoint

! modify chromebook 'Search' meta key to backspace
clear Mod4
keycode 133 = BackSpace

! Modify USB keyboard Caps_Lock into Backspace
keycode 66 = BackSpace
clear Lock
! ... and make it a repeating key - 'xset r 66' - in ~/.xinitrc

keycode 108 = Alt_R

! set '=ignore' in logind.conf and make powerkey into pause
keycode 124 = Pause
